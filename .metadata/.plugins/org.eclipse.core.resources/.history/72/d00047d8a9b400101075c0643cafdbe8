package com.demo.array;

import java.util.Arrays;

public class ArrayService {
	private int[] arr;
	private int count;
	
	public ArrayService(){
		arr=new int[10];
		count=0;
	}
	
	public ArrayService(int[] arr,int count) {
		this.arr=arr;
		this.count=count;
	}
	
	public ArrayService(int size) {
		arr=new int[size];
		count=0;
	}
	
	public int getCapacity() {
		return arr.length;
	}
	
	public int getSize() {
		return count;
	}
	public boolean add(int x) {
		if(count<arr.length) {
		   arr[count]=x;
		   count++;
		   return true;
		}
		return false;
	}
	public boolean add(int val,int pos) {
		if(count < arr.length && pos<count) {
			for(int i=count;i>pos;i--) {
				arr[i] = arr[i-1];
			}
			arr[pos]= val;
			count++;
			return true;
		}
		return false;
	}
    public boolean deletePos(int pos) {
    	if(pos < count) {
    		for(int i = pos;i<count;i++) {
    			arr[i] = arr[i+1];
    		}
    		count--;
    		return true;
    	}
    	return false;
    }
    public int maxArray() {
    	int max = arr[0];
    	for(int i=1;i<arr.length;i++) {
    		if(max < arr[i]) {
    			max = arr[i];
    		}
    		
    	}
    	return max;
    }
	@Override
	public String toString() {
		return "ArrayService arr=" + Arrays.toString(arr) ;
	}
	
	

}
